<section id="viewAddFlight">
    <h2>Add new flight</h2>
    <form id="formAddFlight" action="#/flight/add" method="post">
        <label>Destination:</label>
        <input type="text" name="destination" placeholder="Destination" >
        <p class="text-danger validation-massage" id="validate-destination"></p>

        <label>Origin:</label>
        <input type="text" name="origin" placeholder="Origin">
        <p class="text-danger validation-massage" id="validate-origin"></p>

        <label>Departure Date:</label>
        <input type="date" name="departureDate">
        <p class="text-danger validation-massage" id="validate-departureDate"></p>

        <label>Departure Time:</label>
        <input type="time" name="departureTime">
        <p class="text-danger validation-massage" id="validate-departureTime"></p>

        <label>Number of Seats:</label>
        <input type="number" name="seats" placeholder="0">
        <p class="text-danger validation-massage" id="validate-seats"></p>

        <label>Cost per seat:</label>
        <input type="number" step="2" name="cost" placeholder="0.00">
        <p class="text-danger validation-massage" id="validate-cost"></p>

        <label>Image:</label>
        <input type="text" name="img">
        <p class="text-danger validation-massage" id="validate-img"></p>

        <label>Is Public:</label>
        <input type="checkbox" name="public">

        <input type="submit" class="create" value="Create">
    </form>
</section>
<script>
    $(()=>{ validateForm.flight('#formAddFlight')});
</script>
